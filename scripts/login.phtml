?>

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml" xmlns:og="http://ogp.me/ns#">
    <head>

        <?php
        // Header
        try {
            $this->header();
        } catch (Exception $e) {
            echo 'Failed: ' . $e->getMessage();
        }

        // Charset
        echo $this->headMeta()->appendHttpEquiv('Content-Type', 'text/html; charset=UTF-8');

        // Title
        echo $this->headTitle($this->title);

        // Stylesheet - Favicon
        echo $this->headLink()
                ->appendStylesheet($this->themePath . '/css/admin.css', 'screen')
                ->appendStylesheet($this->cssPath . '/main.css', 'screen')
                ->headLink(array('rel' => 'favicon', 'href' => $this->imagePath . '/favicon.ico'), 'PREPEND');

        // Jquery
        echo $this->google_AjaxLibraries(array(
            'library' => 'jquery',
            'version' => 1
        ));

        echo $this->headScript()->appendFile($this->jsPath . '/main.js', 'text/javascript');
        ?>

    </head>
    <body class="login">

        <?php
        // Facebook SDK Helper
        try {
            echo $this->facebook_JavascriptSDK();
        } catch (Exception $e) {
            echo 'Failed: ' . $e->getMessage();
        }
        ?>

        <div id="wrapper">

            <div id="header">
                <h1><?php echo $this->siteTitle; ?></h1>
            </div>

            <div id="info">
            </div>

            <div id="content">

                <div id="mainContent">
                    <?php echo $this->layout()->content; ?>
                </div>

                <div class="clear"></div>

            </div>

        </div>

        <?php echo $this->render('footer.phtml'); ?>

    </body>

</html>
